<?xml version="1.0" encoding="UTF-8"?>
<nifty xmlns="http://nifty-gui.sourceforge.net/nifty-1.3.xsd" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://nifty-gui.sourceforge.net/nifty-1.3.xsd http://nifty-gui.sourceforge.net/nifty-1.3.xsd">
    <useStyles filename="nifty-default-styles.xml"/>
    <useControls filename="nifty-default-controls.xml"/>
    
    <!-- +++++++++++++++++++++++++++++++++++++++ -->
    <!-- SplashScreen -->
    <!-- +++++++++++++++++++++++++++++++++++++++ -->
    <screen id="splashScreen"
            controller="niftyController.SplashScreenController">
        <layer childLayout="center">
            <image id="splashImage" filename="/Textures/splashImage.jpg">
                <effect>
                    <onCustom customKey="fadeIn" name="fade" start="#0" end="#f" length="2500" />
                    <onCustom customKey="fadeOut" name="fade" start="#f" end="#0" length="2500" neverStopRendering="true" />
                </effect>
            </image>
        </layer>
    </screen>

    <!-- +++++++++++++++++++++++++++++++++++++++ -->
    <!-- MainMenuScreen -->
    <!-- +++++++++++++++++++++++++++++++++++++++ -->    
    <screen id="mainMenuScreen" controller="niftyController.MainMenuScreenController">
        <layer childLayout="center" backgroundColor="#000F">
            <image id="imageId" filename="Textures/MainMenuScreen2.jpg" align="right"/>
            <panel id="mainMenuPanel" childLayout="vertical" align="left" width = "30%">
                <panel id="playButtonPanel" childLayout="center" paddingLeft="10%" paddingTop="35%" paddingBottom = "10%" height = "50%" width = "100%">
                    <control id="playButton" name="button" label="Play"  focusable="false" width="100%" height="100%"/>
                </panel>
                <!--<control id="settingsButton" name="button" label="Settings" margin="15px" focusable="false" height = "20%" width = "100%"/>
                <control id="highscoreButton" name="button" label="Highscore" margin="15px" focusable="false" height = "20%" width = "100%"/>-->
                <panel id="playButtonPanel" childLayout="center" paddingLeft="10%" paddingTop="10%" paddingBottom = "35%" height = "50%" width = "100%">
                    <control id="tutorialButton" name="button" label="Instructions" focusable="false" width="100%" height="100%"/>
                </panel>
            </panel>
        </layer>
    </screen>

    <!-- +++++++++++++++++++++++++++++++++++++++ -->
    <!-- TutorialScreens -->
    <!-- +++++++++++++++++++++++++++++++++++++++ -->
    <screen id="tutorialScreenOne" controller="niftyController.MainMenuScreenController">
        <layer childLayout="center" backgroundColor="#000F">
            <image id="imageId" filename="Textures/Tutorial_Jump.jpg" />
            <panel id="mainMenuPanel" childLayout="horizontal" valign="bottom" paddingBottom="15px" height="10%">                <control id="mainMenuButton" name="button" label="Main Menu" margin="15px" height="100%" focusable="false"/> 
                <control id="tutorialTwoButton" name="button" label="Next" margin="15px" height="100%" focusable="false"/> 
            </panel>
        </layer>
    </screen>
    
    <screen id="tutorialScreenTwo" controller="niftyController.MainMenuScreenController">
        <layer childLayout="center" backgroundColor="#000F">
            <image id="imageId" filename="Textures/Tutorial_Powerups.jpg" />
            <panel id="mainMenuPanel" childLayout="horizontal" valign="bottom" paddingBottom="15px" height="10%">
                <control id="tutorialButton" name="button" label="Previous" margin="15px" height="100%" focusable="false"/> 
                <control id="mainMenuButton" name="button" label="Main Menu" margin="15px" height="100%" focusable="false"/>
                <control id="tutorialThreeButton" name="button" label="Next" margin="15px" height="100%" focusable="false"/>  
            </panel>
        </layer>
    </screen>
    
    <screen id="tutorialScreenThree" controller="niftyController.MainMenuScreenController">
        <layer childLayout="center" backgroundColor="#000F">
            <image id="imageId" filename="Textures/Tutorial_Hazards.jpg" />
            <panel id="mainMenuPanel" childLayout="horizontal" valign="bottom" paddingBottom="15px" height="10%">                <control id="tutorialTwoButton" name="button" label="Previous" margin="15px" height="100%" focusable="false"/> 
                <control id="mainMenuButton" name="button" label="Main Menu" margin="15px" height="100%" focusable="false"/>
                <control id="tutorialFourButton" name="button" label="Next" margin="15px" height="100%" focusable="false"/>  
            </panel>
        </layer>
    </screen>
    
    <screen id="tutorialScreenFour" controller="niftyController.MainMenuScreenController">
        <layer childLayout="center" backgroundColor="#000F">
            <image id="imageId" filename="Textures/Tutorial_Final.jpg" />
            <panel id="mainMenuPanel" childLayout="horizontal" valign="bottom" paddingBottom="15px" height="10%">                <control id="tutorialThreeButton" name="button" label="Previous" margin="15px" height="100%" focusable="false"/>
                <control id="mainMenuButton" name="button" label="Main Menu" margin="15px" height="100%" focusable="false"/>  
            </panel>
        </layer>
    </screen>

    <!-- +++++++++++++++++++++++++++++++++++++++ -->
    <!-- GameOverScreen -->
    <!-- +++++++++++++++++++++++++++++++++++++++ -->    
    <screen id="gameOverScreen" controller="niftyController.MainMenuScreenController">
        <layer childLayout="horizontal">
            <panel id="gameOverPanelLeft" childLayout="center" valign="bottom" height = "20%" width="50%">
                <control id="playButton" name="button" label="Play" focusable="false"
                         height="100%" width="90%"/>
            </panel>
            <panel id="gameOverPanelRight" childLayout="center" valign="bottom" height = "20%" width="50%">
                <control id="mainMenuButton" name="button" label="Main Menu" focusable="false"
                         height="100%" width="90%" />
            </panel>
        </layer>
    </screen>

    <!-- +++++++++++++++++++++++++++++++++++++++ -->
    <!-- SettingsScreen -->
    <!-- +++++++++++++++++++++++++++++++++++++++ -->
    <screen id="settingsScreen" controller="niftyController.MainMenuScreenController">
        <layer childLayout="center">
            <panel id="settingsPanel" childLayout="vertical">
                <control id="mainMenuButton" name="button" label="Main Menu" margin="15px" focusable="false"/> 
            </panel>
        </layer>
    </screen>

    <!-- +++++++++++++++++++++++++++++++++++++++ -->
    <!-- HighScoreScreen -->
    <!-- +++++++++++++++++++++++++++++++++++++++ -->
    <screen id="highscoreScreen" controller="niftyController.MainMenuScreenController">
        <layer childLayout="center">
            <panel id="highscorePanel" childLayout="vertical">
                <control id="mainMenuButton" name="button" label="Main Menu" margin="15px" focusable="false"/> 
            </panel>
        </layer>
    </screen>
    
    
</nifty>
